<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/color_bg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppThemeOff" parent="AppTheme">
        <item name="colorPrimary">@color/colorOFF</item>
        <item name="colorPrimaryDark">@color/colorOFF</item>
        <item name="colorAccent">@color/colorOFF</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppThemeOn" parent="AppTheme">
        <item name="colorPrimary">@color/colorON</item>
        <item name="colorPrimaryDark">@color/colorON</item>
        <item name="colorAccent">@color/colorON</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="colorPrimary">@color/color_bg</item>
        <item name="colorPrimaryDark">@color/color_bg</item>
        <item name="colorAccent">@color/color_bg</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
